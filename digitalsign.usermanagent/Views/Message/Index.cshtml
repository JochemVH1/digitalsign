@model IEnumerable<digitalsign.application.Contracts.V1.ViewModels.Message.MessageViewModel>
@using digitalsign.application.Contracts.V1.InputModels.Message
@{
    ViewData["Title"] = "Berichten";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="nav-adjust row">
    <div class="col-12">
        <h1>@Resources.Resource.MessageTitel</h1>
    </div>
</div>
<div class="row">
    <div class="col-4">          
        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col" style="width: 70%">
                        @Html.DisplayNameFor(model => model.Payload)
                    </th>
                    <th scope="col" style="width: 10%"></th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex flex-row">
                                    <p class="flex-grow-1 text-left">
                                        @Html.DisplayFor(modelItem => item.Payload)
                                    </p>
                                    <p class="font-weight-light font-italic">
                                        @Html.DisplayFor(modelItem => item.CreationDate)
                                    </p>
                                </div>

                            </td>
                            <td>
                                <div class="text-right">
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

    </div>
    <div class="col-8">
        @await Html.PartialAsync("_Create.cshtml", new MessageInputModel())
    </div>
</div>

