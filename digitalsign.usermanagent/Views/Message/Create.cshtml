@model digitalsign.application.Contracts.V1.InputModels.Message.MessageInputModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid d-flex h-100 flex-column">
    <div class="row justify-content-center align-items-center w-100 flex-fill d-flex">
        <div class="col-xl-4 col-xs-6">
            <div class="card">
                <div class="card-body">
                    <div class="card-title text-center">
                        <img class="img-responsive logo" src="~/img/logo.png" />
                        <h3 class="card-text">@Resources.Resource.MessageNewTitle</h3>
                    </div>
                    <form asp-route="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <fieldset>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Payload" class="control-label"></label>
                                <input asp-for="Payload" class="form-control" />
                                <span asp-validation-for="Payload" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </fieldset>
                    </form>
                    <div>
                        <a asp-action="Index">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
