@model IEnumerable<digitalsign.application.Contracts.V1.ViewModels.Message.MessageViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-12 h-100 w-100">
    <div id="messageCarousel" class="carousel slide carousel-fade" data-ride="carousel" data-interval="5000" data-pause="false">
        <div class="carousel-inner h-100">
            @{var counter = 0; }
            @foreach (var item in Model)
            {
                if (counter == 0)
                {
                    <div class="carousel-item active d-flex justify-content-center align-items-center min-vh-100">

                        <div class="col-xl-4 col-xs-6">
                            <div class="card">
                                <div class="card-body">
                                    <div class="card-title text-left">
                                        <h3 class="card-text">@Html.DisplayFor(modelItem => item.Payload)</h3>
                                    </div>
                                    <div>
                                        @Html.DisplayFor(modelItem => item.UserName) | @Html.DisplayFor(modelItem => item.CreationDate)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="carousel-item h-100 d-flex justify-content-center align-items-center min-vh-100">
                        <div class="col-xl-4 col-xs-6">
                            <div class="card w-100">
                                <div class="card-body">
                                    <div class="card-title text-left">
                                        <h3 class="card-text">@Html.DisplayFor(modelItem => item.Payload)</h3>
                                    </div>
                                    <div>
                                        @Html.DisplayFor(modelItem => item.UserName) | @Html.DisplayFor(modelItem => item.CreationDate)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                }
                counter++;
            }
        </div>
        <a class="carousel-control-prev" href="#messageCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#messageCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

</div>